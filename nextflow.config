params.outdir = params.outdir ?: 'results'

profiles {
    docker {
        docker.enabled = true
        process {
            container = 'ubuntu:22.04'
        }
    }

    awsbatch {
        process {
            executor = 'awsbatch'
            container = 'ubuntu:22.04'
        }
    }
}

// Default to docker for local runs
process {
    container = 'ubuntu:22.04'
}
